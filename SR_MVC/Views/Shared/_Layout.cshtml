    <footer class="border-top footer text-muted">
        @if (sessionManager.Client != null)
        {
            <div class="container">
                <h6 style="color: antiquewhite;">You are now logged in as @sessionManager.Client.FirstName @sessionManager.Client.LastName! </h6>
            </div>
