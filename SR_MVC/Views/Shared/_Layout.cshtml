            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    @if (sessionManager.Client != null)
                    {
                        <li class="nav-item">
                            <a class="nav-link"
                               asp-area=""
                               asp-controller="Auth"
                               asp-action="Logged">
                                Home
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link active"
                               asp-area=""
                               asp-controller="Home"
                               asp-action="Booking">
                                <strong>Book a spaceflight</strong>
                            </a>
                        </li>

                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link"
                               asp-area=""
                               asp-controller="Home"
