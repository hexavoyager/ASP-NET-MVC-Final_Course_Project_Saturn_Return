@model SR_MVC.Models.Forms.LoginForm

@{
    ViewData["Title"] = "Login";
}



<div class="flex-container">
    <div id="flex-item1"><h1>Login and access a universe of destinations.</h1></div>
    <div id="flex-item2">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Pass" class="control-label"></label>
                        <input asp-for="Pass" class="form-control" />
                        <span asp-validation-for="Pass" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit">LOGIN</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
